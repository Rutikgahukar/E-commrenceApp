<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ezyyycart"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ezyyycart"
        android:supportsRtl="true"
        android:theme="@style/Theme.EzyCarts"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".activites.CategoryActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.EzyCarts.Actionbar"/>
        <activity
            android:name=".activites.SearchActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.EzyCarts.Actionbar"/>
        <activity
            android:name=".activites.PaymentActivity"
            android:exported="false"
            android:label="Payments"
            android:theme="@style/Base.Theme.EzyCarts.Actionbar" />
        <activity
            android:name=".activites.CheckOutActivity"
            android:exported="false"
            android:label="Checkout"
            android:theme="@style/Base.Theme.EzyCarts.Actionbar" />
        <activity
            android:name=".activites.CartActivity"
            android:exported="false"
            android:label="Shopping Cart"
            android:theme="@style/Base.Theme.EzyCarts.Actionbar" />
        <activity
            android:name=".activites.ProductDetailedActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.EzyCarts.Actionbar" />
        <activity
            android:name=".activites.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>